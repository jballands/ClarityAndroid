<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="15dip"
    android:paddingBottom="15dip"
    android:background="@drawable/ticketinactive_button"
    android:orientation="vertical" >
    
	<ImageView
        android:id="@+id/adapter_openticket_item_create_icon" 
    	android:layout_width="18dip"
    	android:layout_height="18dip"
    	android:scaleType="centerInside"
    	android:layout_marginLeft="15dip"
    	android:layout_marginTop="3dip"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/pen_2_red_32"
    	android:contentDescription="@string/image_descript" />
    
	<TextView 
        android:id="@+id/adapter_closedticket_item_date_opened" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/adapter_openticket_item_create_icon"
        android:layout_marginLeft="8dip"
        android:textSize="16sp"
        android:textColor="#990626" />
	
	<ImageView
        android:id="@+id/adapter_closedticket_item_check_icon" 
    	android:layout_width="18dip"
    	android:layout_height="18dip"
    	android:scaleType="centerInside"
    	android:layout_marginLeft="15dip"
    	android:layout_marginTop="3dip"
    	android:layout_toRightOf="@id/adapter_closedticket_item_date_opened"
    	android:src="@drawable/tick_red_32"
    	android:contentDescription="@string/image_descript" />
    
	<TextView 
        android:id="@+id/adapter_closedticket_item_date_closed" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/adapter_closedticket_item_check_icon"
        android:layout_marginLeft="8dip"
        android:textSize="16sp"
        android:textColor="#990626" />
	
	<ImageView
    	android:layout_width="18dip"
    	android:layout_height="18dip"
    	android:scaleType="centerInside"
    	android:layout_marginRight="5dip"
    	android:layout_marginTop="3dip"
    	android:layout_alignParentRight="true"
    	android:src="@drawable/arrow_right_red_32"
    	android:contentDescription="@string/image_descript" />
    	
</RelativeLayout>
