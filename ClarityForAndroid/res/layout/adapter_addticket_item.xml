<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="15dip"
    android:paddingBottom="15dip"
    android:background="@drawable/ticketcreate_button"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/adapter_newticket_item_create_icon" 
    	android:layout_width="18dip"
    	android:layout_height="18dip"
    	android:scaleType="centerInside"
    	android:layout_marginLeft="15dip"
    	android:layout_marginTop="3dip"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/plus_blue_32"
    	android:contentDescription="@string/image_descript" />
    
	<TextView 
        android:id="@+id/adapter_openticket_item_date_opened" 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/adapter_newticket_item_create_icon"
        android:layout_marginLeft="8dip"
        android:text="@string/activity_choose_ticket_add"
        android:textSize="16sp"
        android:textColor="#26918A" />
    	
</RelativeLayout>
