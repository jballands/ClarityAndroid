                android:text="@string/service_wheelchair_hint"
                android:textSize="14sp" />
        	
        	<View
        	    android:id="@+id/fragment_qrcode_divider7"
        	    android:layout_below="@id/fragment_qrcode_wheelchair_descript"
    			android:layout_width="fill_parent"
    			android:layout_marginTop="10dip"
    			android:layout_height="1dp"
    			android:background="#FFFFFF" />
        	
        	<CheckBox 
        	    android:id="@+id/fragment_qrcode_tricycle_checkbox"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/fragment_qrcode_divider7"
        		android:textColor="#FFFFFF"
        		android:text="@string/service_tricycle"	/>
        	<TextView 
        	    android:id="@+id/fragment_qrcode_tricycle_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_qrcode_tricycle_checkbox"
                android:textStyle="italic"
                android:layout_marginLeft="30dip"
                android:textColor="#FFFFFF"
                android:text="@string/service_tricycle_hint"
                android:textSize="14sp" />
        	
        	<View
        	    android:id="@+id/fragment_qrcode_divider8"
        	    android:layout_below="@id/fragment_qrcode_tricycle_descript"
    			android:layout_width="fill_parent"
    			android:layout_marginTop="10dip"
    			android:layout_height="1dp"
    			android:background="#FFFFFF" />
        	
        	<CheckBox 
        	    android:id="@+id/fragment_qrcode_crutches_checkbox"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/fragment_qrcode_divider8"
        		android:textColor="#FFFFFF"
        		android:text="@string/service_crutches"	/>
        	<TextView 
        	    android:id="@+id/fragment_qrcode_crutches_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_qrcode_crutches_checkbox"
                android:textStyle="italic"
                android:layout_marginLeft="30dip"
                android:textColor="#FFFFFF"
                android:text="@string/service_crutches_hint"
                android:textSize="14sp" />
        	
        	<View
        	    android:id="@+id/fragment_qrcode_divider9"
        	    android:layout_below="@id/fragment_qrcode_crutches_descript"
    			android:layout_width="fill_parent"
    			android:layout_marginTop="10dip"
    			android:layout_height="1dp"
    			android:background="#FFFFFF" />
        	
        	<CheckBox 
        	    android:id="@+id/fragment_qrcode_sewing_checkbox"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/fragment_qrcode_divider9"
        		android:textColor="#FFFFFF"
        		android:text="@string/service_sewing"	/>
        	<TextView 
        	    android:id="@+id/fragment_qrcode_sewing_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_qrcode_sewing_checkbox"
                android:textStyle="italic"
                android:layout_marginLeft="30dip"
                android:textColor="#FFFFFF"
                android:text="@string/service_sewing_hint"
                android:textSize="14sp" />
        	
        	<View
        	    android:id="@+id/fragment_qrcode_divider10"
        	    android:layout_below="@id/fragment_qrcode_sewing_descript"
    			android:layout_width="fill_parent"
    			android:layout_marginTop="10dip"
    			android:layout_height="1dp"
    			android:background="#FFFFFF" />
        	
        	<CheckBox 
        	    android:id="@+id/fragment_qrcode_tea_checkbox"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/fragment_qrcode_divider10"
        		android:textColor="#FFFFFF"
        		android:text="@string/service_tea"	/>
        	<TextView 
        	    android:id="@+id/fragment_qrcode_tea_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_qrcode_tea_checkbox"
                android:textStyle="italic"
                android:layout_marginLeft="30dip"
                android:textColor="#FFFFFF"
                android:text="@string/service_tea_hint"
                android:textSize="14sp" />
        	
        	<View
        	    android:id="@+id/fragment_qrcode_divider11"
        	    android:layout_below="@id/fragment_qrcode_tea_descript"
    			android:layout_width="fill_parent"
    			android:layout_marginTop="10dip"
    			android:layout_height="1dp"
    			android:background="#FFFFFF" />
        	
        	<TextView 
        	    android:id="@+id/fragment_qrcode_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_qrcode_divider11"
                android:layout_marginTop="10dip"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="@string/service_loan" />
        	
        	<NumberPicker
        		android:id="@+id/fragment_qrcode_loan_picker"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:layout_below="@id/fragment_qrcode_loan"
        		android:layout_marginTop="10dip" />
		
 	</RelativeLayout>       	
</ScrollView>